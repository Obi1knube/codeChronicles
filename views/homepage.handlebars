{{! Loop through the blogs data and display them }}
{{#each blogs}}
  <div class='row mb-4 blog'>
    <div class='col-md-5'>
      <h2>{{title}}</h2>
      <p>{{content}}</p>
      <p>Written by {{user.name}}</p>
      <!-- Updated to use the correct context -->
    </div>
    <div class='col-md-7'>
      {{! Loop through the comments data and display them }}
      {{#each this.comments}}
        <!-- Updated to use the correct context -->
        <p>{{description}}</p>
      {{/each}}
    </div>
  </div>
{{/each}}