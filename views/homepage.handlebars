<!-- Loop over each object in the blogPosts array -->
{{#each blogs as |blog|}}
  <div class='row mb-4 blog'>
    <div class='col-md-5'>
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        <a href='/post/{{blog.id}}'>{{blog.title}}</a>
      </h2>
      <p>
        Created by
        {{blog.user.name}}
        on
        {{format_date post.date_published}}
        <span for='img' aria-label='user'>ðŸ‘¤</span>
      </p>

    </div>
    <div class='col-md-7'>
      <p>
        {{blog.content}}
      </p>
    </div>
  </div>
{{/each}}