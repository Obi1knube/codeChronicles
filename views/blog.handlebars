<div class='blog-post'>
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Written by {{user.name}} on {{format_time blog.date_created}}</p>
  <h3>Comments:</h3>
  {{#each comment}}
    <div class='comment'>
      <p>{{this}}</p>
    </div>
  {{/each}}
  <section class="container">
    <h3 class="blog-title"> {{blog.title}} </h3>
    <section class="flex-row justify-center">
      {{#each comments as |comment|}}
        {{> comment-details comment=comment}}
      {{/each}}
    </section>
  </section>
</div>